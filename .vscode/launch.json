    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compare PLAS and FLAS",
            "type": "debugpy",
            "request": "launch",
            "program": "eval/compare_plas_flas.py",
            "console": "integratedTerminal",
            "args": [
                "--size=256",
                "--no-compute-flas",
                // "--no-compute-plas",
                "--output-dir=/tmp/plas-flas-compare",
            ],
        },
        {
            "name": "Run FLAS 64x64 RGB",
            "type": "debugpy",
            "request": "launch",
            "program": "eval/flas.py",
            "console": "integratedTerminal",
            "args": [
                "--width",
                "64",
                "--height",
                "64"
            ],
        },
        {
            "name": "Runtime over size",
            "type": "debugpy",
            "request": "launch",
            "program": "eval/eval_plas_runtime_over_size.py",
            "console": "integratedTerminal",
            "args": [],
        },
        {
            "name": "VAD over improvement break",
            "type": "debugpy",
            "request": "launch",
            "program": "eval/eval_plas_vad_over_break.py",
            "console": "integratedTerminal",
            "args": [],
        },

        {
            "name": "Sort 3D Gaussians",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/sort_3d_gaussians.py",
            "console": "integratedTerminal",
            "args": ["--input-gs-ply", "/data/gaussian_splatting/models/truck/point_cloud/iteration_30000/point_cloud.ply",
                     "--output-gs-ply", "/data/gaussian_splatting/models/truck/sorted/point_cloud/iteration_504730/point_cloud.ply",
                     "--output-rgb-point-cloud-ply", "/data/gaussian_splatting/models/truck/sorted/rgb_points.ply",
            ],
        },

        {
            "name": "Sort RGB image",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/sort_rgb_img.py",
            "console": "integratedTerminal",
            "args": ["--img-path", "img/VanGogh-starry_night.jpg",
            // "--no-shuffle",
            ],
        },


    ]
}